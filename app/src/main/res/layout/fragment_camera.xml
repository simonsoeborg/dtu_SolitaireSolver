<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    >

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Tableau1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="90"
            android:text="@string/Tableau1"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="@id/grp1Line"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/grp1Line"
            android:layout_width="411dp"
            android:layout_height="2dp"
            android:layout_marginTop="85dp"
            android:background="#E91E1E" />

        <View
            android:id="@+id/grp2Line"
            android:layout_width="270dp"
            android:layout_height="2dp"
            android:layout_marginTop="170dp"
            android:background="#E91E1E" />

        <View
            android:id="@+id/grp3Line"
            android:layout_width="411dp"
            android:layout_height="2dp"
            android:layout_marginTop="255dp"
            android:background="#E91E1E" />

        <View
            android:id="@+id/grp4Line"
            android:layout_width="411dp"
            android:layout_height="2dp"
            android:layout_marginTop="340dp"
            android:background="#E91E1E" />

        <View
            android:id="@+id/grp5Line"
            android:layout_width="411dp"
            android:layout_height="2dp"
            android:layout_marginTop="425dp"
            android:background="#E91E1E" />

        <View
            android:id="@+id/grp6Line"
            android:layout_width="411dp"
            android:layout_height="2dp"
            android:layout_marginTop="510dp"
            android:background="#E91E1E" />

        <View
            android:id="@+id/grp7Line"
            android:layout_width="411dp"
            android:layout_height="2dp"
            android:layout_marginTop="595dp"
            android:background="#E91E1E" />

        <View
            android:id="@+id/adskilleren"
            android:layout_width="2dp"
            android:layout_height="595dp"
            android:layout_marginStart="270dp"
            android:background="#E91E1E" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/button_capture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>